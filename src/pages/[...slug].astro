---
import Layout from '../layouts/Layout.astro';
import links from '../data/links.json';

export function getStaticPaths() {
  return Object.keys(links).map(slug => ({ params: { slug } }));
}

const { slug } = Astro.params;
const destination = links[slug];

if (destination) {
  return Astro.redirect(destination, 301);
}
---

<Layout title="404 - Link not found">
	<main class="container mx-auto px-4 py-8 text-center">
		<h1 class="text-4xl font-bold mb-4">404 - Link not found</h1>
		<p class="mb-8">The requested short link does not exist.</p>
		<a href="/" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded">
			Go back to home
		</a>
	</main>
</Layout>