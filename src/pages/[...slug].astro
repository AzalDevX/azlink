---
import Layout from '../layouts/Layout.astro';
import links from '../data/links.json';

export function getStaticPaths() {
  return Object.keys(links).map(slug => ({ params: { slug } }));
}

const { slug } = Astro.params;
const destination = links[slug];

if (destination) {
  return Astro.redirect(destination, 307);
}
---

<Layout title="Redirigiendo... | AzLink">
  <script define:vars={{ destination }}>
    // Intenta redirección inmediata
    if (destination) {
      window.location.replace(destination);
    }
  </script>
  
  <main class="min-h-screen bg-gradient-to-br from-primary-100 to-secondary-100 p-8 flex flex-col items-center justify-center">
    <div class="text-center">
      <div class="mb-8">
        <div class="inline-block animate-spin rounded-full h-16 w-16 border-t-2 border-b-2 border-primary-600"></div>
      </div>
      <h1 class="text-4xl font-bold text-primary-700 mb-4">Redirigiendo...</h1>
      <p class="text-gray-600 mb-8">Serás redirigido automáticamente</p>
      <a 
        href={destination} 
        class="inline-flex items-center px-6 py-3 rounded-full bg-gradient-to-r from-primary-500 to-secondary-500 text-white font-semibold hover:from-primary-600 hover:to-secondary-600 transition-all duration-300"
      >
        Haz clic aquí si no eres redirigido automáticamente
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
  </main>
</Layout>

<style>
  @keyframes gradient {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }
</style>